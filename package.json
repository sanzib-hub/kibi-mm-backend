{
  "name": "kibi-backend",
  "version": "1.0.0",
  "description": "KIBI Sports AI Brand Matchmaking Backend",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && node prisma/seed.js",
    "test": "jest --runInBand --forceExit",
    "test:unit": "jest tests/unit --forceExit",
    "test:int": "jest tests/integration --runInBand --forceExit",
    "etl:run": "node -e \"require('./src/jobs/sheetsEtl.service').runEtl().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\"",
    "etl:excel": "node -e \"require('./src/jobs/excelCrmEtl.service').runExcelEtl().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\""
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "googleapis": "^140.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
